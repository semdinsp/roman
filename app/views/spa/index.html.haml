%section.container
  %h1 Test Header 
  %h2 Subtitle
  .content
    %div 
      .input(type="text")
      %button Personal Data
      %button Employment

    %div(id="app" data-controller="spa")
      %button(data-action="click->spa#launchSpaDemo")
        Launch Modal
      %div(class="modal" data-controller="modal"  data-spa-target="modal" aria-hidden="true")
        %div(class="modal-dialog" )
          %div(class="modal-content")
            This is a modal
            %button(data-action="click->modal#close")
              Close


  %h2 Try again
  %div(class="w-80 mx-auto mt-5 p-7")
    %p(class="text-2xl font-medium text-gray-800")
      Click here to open to the modal


    %button(class="bg-green-500 text-white rounded-md px-8 py-2 text-base font-medium hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300" id="open-btn")
      Open Modal
